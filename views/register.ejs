<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/static/stylesheets/register.css"
    />
    <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"> 
    
  
    
    </script>
    <title>Document</title>
  </head>

  <body>
    <article class="main-container">
      <div class="login-wrapper">
        <section class="form-wrapper">
          <div class="form-container">
            <div class="form-messages">
              <h2>Register</h2>
              <p>Enter all the information to create your account</p>
            </div>
            <%- include ('./partials/messages') %>
            <form action="/users/register" method="POST" class="form">
              <div id="name">
                <label for="name"></label>
                <input
                  class="name"
                  type="name"
                  name="name"
                  placeholder="Enter Name"
                  value="<%= typeof name != 'undefined' ? name : '' %>"
                />
              </div>

              <div id="firstName">
                <label for="firstName"></label>
                <input
                  class="firstName"
                  type="firstName"
                  name="firstName"
                  placeholder="Enter First Name"
                  value="<%= typeof firstName != 'undefined' ? firstName : '' %>"
                />
              </div>

              <div id="birthday">
                <label for="birthday"></label>
                <input
                  class="birthday"
                  type="date"
                  name="birthday"
                  value="<%= typeof birthday != 'undefined' ? birthday : '' %>"
                />
              </div>

              <div id="gender">
                <p>Choose your gender</p>
                <input type="radio" name="gender" value="Man" id="man" />
                <label for="gender">Man</label><br />

                <input type="radio" name="gender" value="Woman" id="woman"/>
                <label for="gender">Woman</label><br />

                <input type="radio" name="gender" value="Non-binary" id="nonBinary" />
                <label for="gender">Non binary</label>
              </div>
  
              <div id="email">
                <label for="email"></label>
                <input
                  class="email"
                  type="email"
                  name="email"
                  placeholder="Enter Email"
                  value="<%= typeof email != 'undefined' ? email : '' %>"
                />
              </div>

              <div id="password">
                <label for="password"></label>
                <input
                  class="password"
                  type="password"
                  name="password"
                  placeholder="Create Password"
                  value="<%= typeof password != 'undefined' ? password : '' %>"
                />
              </div>

              <div id="password2">
                <label for="password2"></label>
                <input
                  class="password2"
                  type="password"
                  name="password2"
                  placeholder="Confirm Password"
                  value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
              </div>
             
              <div>
                <button type="submit" class="register-button">Register</button>
                <hr class="separator" />

                <p class="haveAnAccount">
                  <!-- I added the url to redirect login page -->
                  Already have an Account ?<a href="/" class="login"
                    >Login</a
                  >
                </p>

                <!-- <a href="/users/welcome">Go welcome page</a> -->
              </div>
            </form>
          </div>
        </section>

        <section class="image-wrapper">
          <div class="image-message">
            <div class="image-hr-container">
              <hr class="image-hr" />
            </div>

            <div class="image-text">
              <h2>Start your journey now</h2>
              <p>BookFace Kamasapi, the best social network</p>
            </div>
          </div>
        </section>
      </div>
    </article>

   
  </body>
</html>
